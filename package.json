{
  "name": "metric-api",
  "version": "1.0.0",
  "main": "index.ts",
  "author": "",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "dev": "nodemon",
    "start": "rm -rf build/* && tsc --project tsconfig.build.json && node ./build/index.js",
    "build": "rm -rf build/* && tsc --project tsconfig.build.json",
    "clean": "rm -rf build",
    "postinstall": "rm -f ./node_modules/mongoose/index.d.ts",
    "format": "npx prettier --write",
    "check-types": "tsc --noEmit",
    "lint": "npm run check-types && npx eslint -c .eslintrc.json",
    "test": "npx jest --bail --findRelatedTests --passWithNoTests",
    "test-all": "npx jest --passWithNoTests",
    "setup-husky": "npx husky install && npx husky add .husky/pre-commit 'npx lint-staged'"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run format",
      "npm run lint",
      "npm run test"
    ]
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.17",
    "@types/cors": "^2.8.15",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.7",
    "@types/passport": "^1.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "mockingoose": "^2.16.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@sentry/node": "^7.77.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^4.4.1",
    "http-status-codes": "^2.1.4",
    "module-alias": "^2.2.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local-mongoose": "^8.0.0"
  }
}
