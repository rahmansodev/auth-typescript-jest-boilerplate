FROM node:21.2.0-bullseye-slim
RUN apt-get update -y
RUN apt-get install -y rsync
RUN npm install nodemon -g
ENV HOME=/opt/apps/auth-api \
    APPS=/opt/apps \
    PORT=5000
RUN mkdir -p /opt/apps/auth-api
WORKDIR $APPS
COPY package.json .
COPY package-lock.json .
RUN npm install
WORKDIR $HOME
EXPOSE $PORT
